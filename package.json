{
  "name": "@penxle/monorepo",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^18 || ^20",
    "pnpm": "^8.6.0"
  },
  "scripts": {
    "bootstrap": "pnpm install && husky install",
    "dev": "turbo run dev --filter './sites/**' --concurrency 255",
    "codegen": "turbo run codegen",
    "build": "turbo run build --filter './packages/**'",
    "lint": "eslint '**/*'",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier --check --ignore-unknown '**/*'",
    "format:fix": "pnpm format --write"
  },
  "devDependencies": {
    "@penxle/eslint-config": "workspace:^",
    "@penxle/prettier-config": "workspace:^",
    "eslint": "^8.47.0",
    "gitmoji-cli": "^8.4.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "turbo": "^1.10.12",
    "typescript": "^5.1.6"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "serverless-esbuild>esbuild": "0.18"
      }
    }
  }
}
