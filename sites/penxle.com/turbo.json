{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "codegen": {
      "dotEnv": [".env"],
      "dependsOn": ["codegen:prisma"],
      "outputs": [".svelte-kit/**", "$houdini/**"]
    },
    "codegen:prisma": { "cache": false },
    "build": {
      "env": [
        "PRIVATE_*",
        "PUBLIC_*",
        "VERCEL_ANALYTICS_ID",
        "VERCEL_GIT_COMMIT_REF"
      ],
      "outputs": [".svelte-kit/**", ".vercel/**"]
    }
  }
}
